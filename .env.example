# 🔒 环境变量模板文件
# 复制此文件为 .env.local（开发环境）或 .env.production（生产环境）
# 然后填入真实的配置值

# ⚡ 应用基础配置
NODE_ENV=development
PORT=3000

# 🌐 应用URL配置
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXTAUTH_URL=http://localhost:3000

# 🔑 认证密钥（必须修改！使用 openssl rand -base64 32 生成）
NEXTAUTH_SECRET=your-32-character-secret-key-here

# 🗄️ 数据库连接
DATABASE_URL="postgresql://username:password@localhost:5432/social_db?schema=public"

# 🌩️ UploadThing 图片上传配置
# 从 https://uploadthing.com/dashboard 获取
UPLOADTHING_SECRET=sk_live_your_secret_key_here
UPLOADTHING_APP_ID=your_app_id_here

# 📧 邮件服务配置（可选）
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=your-email@gmail.com

# 🔒 安全配置
ALLOWED_ORIGINS=http://localhost:3000

# 📊 分析和监控（可选）
# GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
# SENTRY_DSN=https://your-sentry-dsn

# 🚀 生产环境示例配置
# NODE_ENV=production
# NEXT_PUBLIC_APP_URL=https://yourdomain.com
# NEXTAUTH_URL=https://yourdomain.com
# DATABASE_URL="postgresql://social_user:secure_password@localhost:5432/social_prod?schema=public"
